{
    "name": "ecomm",
    "version": "1.0.0",
    "description": "Ecomm é um projeto de ecommerce construído em partes para aplicar os conhecimentos em Node.JS, MongoDB e Docker",
    "main": "src/main.js",
    "author": "weverson Celio",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev": "nodemon server.js",
        "start": "node server.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --coverage",
        "cli": "node ./src/cli/cli.js",
        "lint": ".\\node_modules\\.bin\\eslint .",
        "lint:fix": "npx eslint --fix . "
    },
    "dependencies": {
        "express": "^4.16.1",
        "mongoose": "^7.3.1",
        "swagger-ui-express": "4.6.3"
    },
    "devDependencies": {
        "@jest/globals": "29.5.0",
        "eslint": "^8.43.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.27.5",
        "jest": "29.5.0",
        "nodemon": "^1.14.9",
        "supertest": "6.3.3"
    }
}
